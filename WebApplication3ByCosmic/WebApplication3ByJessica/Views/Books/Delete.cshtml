@model WebApp4ByJessica.Models.Book
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>
<h5>Are you sure you want to delete this?</h5>
<hr />

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Author</dt>
    <dd class="col-sm-10">@Model.Author</dd>

    <dt class="col-sm-2">ISBN</dt>
    <dd class="col-sm-10">@Model.Isbn</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Published</dt>
    <dd class="col-sm-10">@Model.PublishedDate?.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
</form>
