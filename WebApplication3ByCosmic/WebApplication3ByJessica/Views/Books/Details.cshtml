@model WebApp4ByJessica.Models.Book
@{
    ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Author</dt>
    <dd class="col-sm-10">@Model.Author</dd>

    <dt class="col-sm-2">ISBN</dt>
    <dd class="col-sm-10">@Model.Isbn</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Published</dt>
    <dd class="col-sm-10">@Model.PublishedDate?.ToString("yyyy-MM-dd")</dd>
</dl>

<p>
    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</p>
